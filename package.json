{
  "name": "thai-handmate",
  "version": "1.0.0",
  "description": "ระบบจดจำภาษามือไทยด้วย Teachable Machine และสร้างประโยคด้วย AI",
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 5173",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "backend": "cd backend && python app.py",
    "start": "concurrently \"npm run backend\" \"npm run dev\"",
    "dev:full": "concurrently --kill-others-on-fail \"npm run backend\" \"npm run dev\""
  },
  "dependencies": {
    "@teachablemachine/image": "^0.8.5",
    "face-api.js": "^0.22.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "vite": "^5.4.19"
  }
}
